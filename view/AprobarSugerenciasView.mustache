<h1 style="text-align: center; color: white;">Preguntas Sugeridas por los Usuarios</h1>


<div style="display: flex; justify-content: flex-end; margin: 10px 20px;">
    <a href="/triviados/PanelEditor/show" class="btn">Volver al panel</a>
</div>

{{#mensaje}}
    <div style="text-align: center; background-color: #d4edda; color: #155724; padding: 10px; margin: 10px auto; width: 60%; border: 1px solid #c3e6cb; border-radius: 5px;">
        {{mensaje}}
    </div>
{{/mensaje}}

<div style="margin: 20px auto; max-width: 800px;">
    {{#sugerencias}}
        <div style="display: flex; justify-content: space-between; align-items: center; background-color: #f9f9f9; padding: 15px; margin-bottom: 10px; border-radius: 8px;">
            <span style="flex: 1;">{{pregunta}}</span>
            <div style="display: flex; gap: 10px;">
                <a href="/triviados/AprobarSugerencias/aprobada?id={{id}}" class="btn" style="background-color: #28a745;">Aprobar</a>
                <a href="/triviados/AprobarSugerencias/rechazada?id={{id}}"
                class="btn"
                style="background-color: #dc3545;"
                onclick="return confirm('Â¿EstÃ¡s seguro de rechazar esta pregunta?');">
                Rechazar
                </a>
            </div>
        </div>
    {{/sugerencias}}

    {{^sugerencias}}
        <p style="text-align: center; color: white;">No hay preguntas sugeridas pendientes.</p>
    {{/sugerencias}}
</div>