<section>
    <div class="user-bar" style="position: absolute; top: 15px; right: 20px; display: flex; align-items: center; gap: 10px;">
        <form method="POST" action="/triviados/Logout/ejecutar" style="display: inline;">
            <button type="submit" class="btn">Cerrar sesión</button>
        </form>
    </div>
    <div>
        <form method="get">
            <label class="bottom-text">Seleccionar período:</label>
            <select name="periodo" id="periodo" onchange="this.form.submit()" class="btn" style="margin-bottom: 10px;">
                <option value="dia">Día</option>
                <option value="semana">Semana</option>
                <option value="mes">Mes</option>
                <option value="año">Año</option>
            </select>
        </form>
    </div>
    <div>
        <img src="{{grafico_partidas_totales}}" alt="Gráfico de partidas totales">
        <img src="{{grafico_usuarios_totales}}" alt="Gráfico de usuarios totales">
        <img src="{{grafico_preguntas_totales}}" alt="Gráfico de preguntas totales">
        <img src="{{grafico_porcentaje_preguntas_usuarios}}" alt="Gráfico de porcentaje de preguntas correctas por usuario">
        <img src="{{grafico_cantidad_usuarios_por_pais}}" alt="Gráfico de cantidad de usuarios por pais">
        <img src="{{grafico_cantidad_usuarios_por_sexo}}" alt="Gráfico de cantidad de usuarios por sexo">
        <img src="{{grafico_cantidad_usuarios_por_grupo_edad}}" alt="Gráfico de cantidad de usuarios por grupo de edad">
    </div>


    <div style="text-align: center; margin-top: 20px; margin-bottom: 20px;">
        <a href="/triviados/Dashboard/generarPDF?periodo={{periodo}}" target="_blank" class="btn">
        Descargar PDF del {{periodo}}
        </a>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', () => {
document.getElementById('periodo').value = '{{periodo}}';
});
</script>